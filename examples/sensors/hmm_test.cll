// c

# 0 --> 000
# 1 --> 100

actor* step@(0~>1);

int@0 step(int::3@(1,1,1) acc, int@1 o) {
  int@1 prob;
  if(o > 0) {
      prob = acc::0 *@2 acc::1;
  } else {
    prob = acc::2 *@2 acc::1;
  }
  return prob;
}

int@0 filter(int::3@(0,0,0) acc){ 
  return acc::0 + acc::1 + acc::2;
}

void main(){
  int::3 acc;
  int@0 ans;

  for (i from 0 to 10){ //for each accelerometer reading
    if (filter(acc)){
      ans = step(acc,1);
    }
  }
  ans = step(acc,-1);
  
}
